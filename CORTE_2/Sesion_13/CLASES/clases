class ConversorNumerico:
    def __init__(self):
        self.__numero = 0  # Inicializamos el número en 0 en lugar de None

    def setNumero(self, numero: int):
        self.__numero = numero

    def getNumero(self):
        return self.__numero


class Decimal(ConversorNumerico):
    def decBin(self):
        num = self.getNumero()
        return bin(num)[2:]

    def decHex(self):
        num = self.getNumero()
        return hex(num)[2:]


class Binario(ConversorNumerico):
    def binDec(self):
        num = self.getNumero()
        return int(str(num), 2)


class Hexadecimal(ConversorNumerico):
    def hexDec(self):
        num = self.getNumero()
        return int(str(num), 16)


def main():
    while True:
        print('--------------Sistema de conversion numerico--------------\n'
              '1. Conversion Decimal a Binario\n'
              '2. Conversion Decimal a Hexadecimal\n'
              '3. Conversion Binario a Decimal\n'
              '4. Conversion Hexadecimal a Decimal\n')

        Op = input('¿Que conversion desea realizar?: ')

        convertir = ConversorNumerico()
        numero = int(input('Escriba el numero a convertir: '))
        convertir.setNumero(numero)

        if Op == "1":
            decimal = Decimal()
            print(f'El numero decimal {convertir.getNumero()} es {decimal.decBin()} en binario')

        elif Op == "2":
            decimal = Decimal()
            print(f'El numero decimal {convertir.getNumero()} es {decimal.decHex()} en hexadecimal')

        elif Op == "3":
            binario = Binario()
            print(f'El numero Binario {convertir.getNumero()} es {binario.binDec()} en decimal')

        elif Op == "4":
            hexadecimal = Hexadecimal()
            print(f'El numero Hexadecimal {convertir.getNumero()} es {hexadecimal.hexDec()} en decimal')

        else:
            print('Opcion invalida')

        continuar = input('¿Desea hacer otra conversion? (S/N): ')
        if continuar.upper() != 'S':
            break


if __name__ == "__main__":
    main()